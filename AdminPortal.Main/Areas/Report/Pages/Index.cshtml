@page
@using Newtonsoft.Json
@model TKW.AdminPortal.Areas.Report.Pages.IndexModel
@{
    ViewBag.Title = "Reports";
}
<pagetitle title="Reports" description="List of all reports."></pagetitle>
<div class="content">
    <form method="post">
        <div class="row">
            <div class="col-md-3" id="pickupboy">
                <div class="hpanel">
                    <div class="panel-body">
                        @if (Model.ErrorMessagePickupboy != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @Model.ErrorMessagePickupboy
                            </div>
                        }
                        <div>
                            <div class="m-b-md">
                                <h5 class="fw-normal">Pickup Boy</h5>
                                <small>Download pickupboy performance list.</small>
                            </div>
                            <div class="mb-3">
                                <div>
                                    <div class="d-inline-block" style="width:48%;">
                                        <label class="col-form-label fw-bold">From</label>
                                        <input type="text" asp-for="Filter.StartDate" id="pickupboy_start_date" class="form-control form-control-sm" value="@(String.Format("{0:dd/MM/yyyy}",Model?.Filter?.StartDate))" placeholder="Start date" data-dtpicker="true">
                                    </div>
                                    <div class="d-inline-block" style="width:48%;">
                                        <label class="col-form-label fw-bold">To</label>
                                        <input type="text" asp-for="Filter.EndDate" id="pickupboy_end_date" class="form-control form-control-sm" value="@(String.Format("{0:dd/MM/yyyy}", Model?.Filter?.EndDate))" placeholder="End date" data-dtpicker="true">
                                    </div>
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-success btn-sm btn-block" type="submit" value="pickupboy" name="submit">Download</button>
                                <button class="btn btn-default btn-sm btn-block" type="reset">Reset</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3" id="request">
                <div class="hpanel">
                    <div class="panel-body">
                        @if (Model.ErrorMessageRequest != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @Model.ErrorMessageRequest
                            </div>
                        }
                        <div>
                            <div class="m-b-md">
                                <h5 class="fw-normal">Request</h5>
                                <small>Download completed, cancelled request List.</small>
                            </div>
                            <div class="mb-3">
                                <div>
                                    <div class="d-inline-block" style="width:48%;">
                                        <label class="col-form-label fw-bold">From</label>
                                        <input type="text" asp-for="Filter.StartDate" id="request_start_date" class="form-control form-control-sm" value="@(String.Format("{0:dd/MM/yyyy}",Model?.Filter?.StartDate))" placeholder="Start date" data-dtpicker="true">
                                    </div>
                                    <div class="d-inline-block" style="width:48%;">
                                        <label class="col-form-label fw-bold">To</label>
                                        <input type="text" asp-for="Filter.EndDate" id="request_end_date" class="form-control form-control-sm" value="@(String.Format("{0:dd/MM/yyyy}", Model?.Filter?.EndDate))" placeholder="End date" data-dtpicker="true">
                                    </div>
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-success btn-sm btn-block" type="submit" value="request" name="submit">Download</button>
                                <button class="btn btn-default btn-sm btn-block" type="reset">Reset</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<lib name="DatetimePicker" />

@section Scripts{
    <script>
        $(function () {

            var options = {
                useStrict: true,
                ignoreReadonly: true,
                format: "DD-MM-YYYY",
                showClear: true
            };
            $("[data-dtpicker]").attr({
                style: "background-color:#fff",
                readonly: 'readonly'
            }).datetimepicker(options);
        });
    </script>
}

