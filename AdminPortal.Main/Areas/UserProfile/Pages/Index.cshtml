    <script>
        $(function () {

            var model =@Html.Raw(JsonConvert.SerializeObject(new { Filter = Model.Filter, PageNo = Model.PageNo, PageSize = Model.PageSize }));
             $.ajax({
                url: '@(Url.Page("Ajax/UserProfile"))',
                 data: model,
                 beforeSend: function (xhr) {
                     xhr.setRequestHeader("RequestVerificationToken",
                         $("#userprofileform_ajax input").val());
                 },
                method: 'POST',
                 success: function (data) { $('#userprofilelist').html(data); }
             });


        });
    </script>
