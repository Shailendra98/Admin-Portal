@page
@model TKW.AdminPortal.Areas.UserProfile.Pages.IndexModel
@using Newtonsoft.Json
@{
    ViewBag.Title = "UserProfile";
}
<pagetitle title="User Details" description="All details of the User.">
</pagetitle>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body profile-user-box">
                    <div class="d-flex align-items-center">
                        <div class="flex-fill">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <div>
                                        <img src="/images/default/profilex124.png" alt="" class="rounded-circle img-thumbnail" style="height:6rem; width:6rem;">
                                    </div>
                                </div>
                                <div class="col ms-1">
                                    <div>
                                        <h4>Shailendra Singh</h4>
                                        <ul class="mb-0 mt-3 list-inline">
                                            <li class="list-inline-item me-5">
                                                <div class="small font-trans text-muted pb-1">MOBILE NUMBER</div>
                                                <span>9669724508</span>
                                            </li>
                                            <li class="list-inline-item me-5">
                                                <div class="small font-trans text-muted pb-1">DATE OF BIRTH</div>
                                                <span>8 Nov 1998</span>
                                            </li>
                                            <li class="list-inline-item me-5">
                                                <div class="small font-trans text-muted pb-1">GENDER</div>
                                                <span>Male</span>
                                            </li>
                                            <li class="list-inline-item me-5">
                                                <div class="small font-trans text-muted pb-1">JOINING DATE</div>
                                                <span>27 Sep 2018</span>
                                            </li>
                                            <li class="list-inline-item me-5">
                                                <div class="small font-trans text-muted pb-1">EMAIL</div>
                                                <span>ssinghlodhi08@gmail.com</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="me-3">
                            <button type="button" class="btn btn-primary btn-outline btn-sm">
                                Edit Profile
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <div id="userprofilelist">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <img alt="Loading.." src="/images/ripple.gif" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form id="userprofileform_ajax" method="post"></form>
@section Styles{
    <link href="~/css/peicon7stroke.min.css" rel="stylesheet" />

}
@section Scripts{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCYTvgY5DS7ipPNzOgxYmJYeZBe4r03qS4"></script>


    <script>
        $(function () {

            var model =@Html.Raw(JsonConvert.SerializeObject(new { Filter = Model.Filter, PageNo = Model.PageNo, PageSize = Model.PageSize }));
             $.ajax({
                url: '@(Url.Page("Ajax/UserProfile"))',
                 data: model,
                 beforeSend: function (xhr) {
                     xhr.setRequestHeader("RequestVerificationToken",
                         $("#userprofileform_ajax input").val());
                 },
                method: 'POST',
                 success: function (data) { $('#userprofilelist').html(data); }
             });


        });
    </script>
}

