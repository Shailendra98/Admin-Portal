@page "{Id:int}"
@model TKW.AdminPortal.Areas.UserProfile.Pages.Ajax.Modal.EditProfileModel
@using TKW.AdminPortal.Constants
@inject TKW.AdminPortal.Utils.UrlGenerator urlGenerator
@{
}

<modal-header title="Edit Profile" close-button="true"></modal-header>

@if (Model.IsDone)
{
    <modal-body>
        <div class="text-center">
            <i class="fa fa-4x fa-check-circle text-success"></i><br />
            <div class="h5 mt-3">Profile updated.</div>
        </div>
    </modal-body>
}

else
{
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    <form method="post"
          data-ajax="true"
          data-ajax-url="@Url.Page("EditProfile", new { Model.Id })"
          data-ajax-begin="$('#editProfileFieldSet').attr('disabled','');"
          data-ajax-complete="$('#editProfileFieldSet').removeAttr('disabled');"
          data-ajax-method="post"
          data-ajax-update="#EditProfileModalContent">
        <fieldset id="editProfileFieldSet">
            <modal-body>
                <div class="row">
                    <div class="col-sm-12 mb-4">
                        <div class="text-center p-b-xs">
                            <img src="@Model.Picture" height="200" class="img-responsive img-thumbnail" alt="No Image" />
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="mb-3">
                            <label class="col-form-label fw-bold" asp-for="Name"></label><br />
                            <input class="form-control" placeholder="Name" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="col-form-label fw-bold" asp-for="MobileNo"></label><br />
                            <input class="form-control" placeholder="MobileNumber" asp-for="MobileNo" />
                            <span asp-validation-for="MobileNo" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="col-form-label fw-bold" asp-for="Email"></label><br />
                            <input class="form-control" placeholder="Email Address" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="mb-3">
                            <label class="col-form-label fw-bold">Date Of Birth</label><br />
                            <input class="form-control" placeholder="Date Of Birth" />
                        </div>

                        <div class="mb-3">
                            <label class="col-form-label fw-bold">Gender</label><br />
                            <input class="form-control" placeholder="Gender" />
                        </div>

                        <div class="mb-3">
                            <label class="col-form-label fw-bold">Joining Date</label><br />
                            <input class="form-control" placeholder="Joining Date" />
                        </div>
                    </div>
                </div>
            </modal-body>

            <modal-footer class="modal-footer d-flex justify-content-between">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal" aria-label="close">Cancel</button>
                <button class="btn btn-success" data-modal-href="@Url.Page("ProfilePicture",new {Model.Id})" type="button">@(string.IsNullOrEmpty(Model.Picture) ? "Upload" : "Change") Picture</button>
                <button class="btn btn-success" type="submit">Update</button>
            </modal-footer>

        </fieldset>
    </form>
}
