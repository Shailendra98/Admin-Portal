@page "{Id:int}"
@model TKW.AdminPortal.Areas.UserProfile.Pages.Ajax.Modal.EditPaytmWalletModel
@{
}

<modal-header title="Edit Paytm Wallet No." close-button="true"></modal-header>

@if (Model.IsDone)
{
    <modal-body>
        <div class="text-center">
            <i class="fa fa-4x fa-check-circle text-success"></i><br />
            <div class="h5 mt-3">Paytm Wallet updated.</div>
        </div>
    </modal-body>
}

else
{
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    <form method="post"
          data-ajax="true"
          data-ajax-url="@Url.Page("EditPaytmWallet", new { Model.Id })"
          data-ajax-begin="$('#editPaytmWalletFieldSet').attr('disabled','');"
          data-ajax-complete="$('#editPaytmWalletFieldSet').removeAttr('disabled');"
          data-ajax-method="post"
          data-ajax-update="#EditPaytmWalletModalContent">
        <fieldset id="editPaytmWalletFieldSet">
            <modal-body>
                <label class="col-form-label fw-bold" asp-for="MobileNumber"></label><br />
                <input class="form-control" placeholder="Paytm Wallet Number" asp-for="MobileNumber" />
                <span asp-validation-for="MobileNumber" class="text-danger small"></span>
            </modal-body>
            <modal-footer>
                <button type="button" class="btn btn-default" data-bs-dismiss="modal" aria-label="close">Cancel</button>
                <button class="btn btn-success" type="submit">Edit</button>
            </modal-footer>
        </fieldset>
    </form>
}
