
@page "{Id:int}"
@model TKW.AdminPortal.Areas.UserProfile.Pages.Ajax.Modal.DeleteAddressModel
@{
}
<modal-header title="Delete Address" close-button="true"></modal-header>

@if (Model.IsDone)
{
    <modal-body>
        <div class="text-center">
            <i class="fa fa-4x fa-check-circle text-success"></i><br />
            <div class="h5 mt-3">DeleteAddress successfull..</div>
        </div>
    </modal-body>
    <script>
        $("#ActionModalContent").trigger("action.done");
    </script>
}
else
{
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    <form method="post"
          data-ajax="true"
          data-ajax-url="@Url.Page("DeleteAddress",new { Model.Id})"
          data-ajax-begin="$('#DeleteAddressFieldSet').attr('disabled','');"
          data-ajax-complete="$('#DeleteAddressFieldSet').removeAttr('disabled');"
          data-ajax-method="post"
          data-ajax-update="#DeleteAddressModalContent">
        <fieldset id="DeleteAddressFieldSet">
            <modal-body>
                <div>Are you sure you want to Delete Address?</div>
            </modal-body>
            <modal-footer>
                <button type="button" class="btn btn-default" data-bs-dismiss="modal" aria-label="close">Cancel</button>
                <button class="btn btn-danger" type="submit">Delete</button>
            </modal-footer>
        </fieldset>
        @*<input asp-for="Id" type="hidden" />*@
    </form>
}








