@model TKW.Queries.DTOs.Franchise.EmployeeModel
@using TKW.AdminPortal.Constants
@using TKW.ApplicationCore.Contexts.FranchiseContext.Aggregates.EmployeeAggregate
@inject TKW.AdminPortal.Utils.UrlGenerator urlGenerator

<div class="row">
    <div class="col-md-12">
        <div class="hpanel m-b-sm">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-6">
                        <div class="media">
                            <div class="media-left">
                                <img class="img-circle" height="100" src="@urlGenerator.ProfilePic(Model.PictureName,UserPicSize.x240)" />
                            </div>
                            <div class="media-body">
                                <div class="media-body">
                                    <h5> @Model.Name</h5>
                                    <span>@Model.MobileNo</span>
                                </div>
                            </div>
                        </div>
                        <br />
                        <button class="btn btn-info btn-sm btn-outline" data-bs-target="#ActionModal" data-modal-href="@Url.Page("Add/UploadProfilePhoto",new {Id=Model.Id })" type="button"><i class="fa fa-upload"></i> Upload Photo</button>
                    </div>
                    <div class="col-xs-6">
                        <div class="text-right p-b-xs ">
                            <span style="font-size:85%;" class="label  m-b-xs @(Model.Status.Id == EmployeeStatus.Active.Id ?"label-success":Model.Status.Id==EmployeeStatus.Leave.Id ? "label-warning":Model.Status.Id==EmployeeStatus.Left.Id ?"label-danger":"label-info")">@Model.Status.Name</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>