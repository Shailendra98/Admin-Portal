@page "{Id:int}"
@model TKW.AdminPortal.Areas.Incentive.Pages.Ajax.Modal.EditDefaultRewardModel
@{

}
<modal-header title="Update Default Reward" close-button="true"></modal-header>
@if (Model.IsDone)
{
    <modal-body>
        <div class="text-center">
            <i class="fa fa-4x fa-check-circle text-success"></i><br />
            <div class="h5 mt-3">Default Reward has been Changed</div>
        </div>
    </modal-body>
    <script>
        $(function () {
            $("#ActionModalContent").trigger(
                {
                    type: "action.done",
                });
        });
    </script>
}
else
{
    @if (!string.IsNullOrWhiteSpace(Model.Errormessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.Errormessage
        </div>
    }
    <form method="post"
          data-ajax="true"
          data-ajax-url="@Url.Page("EditDefaultReward")"
          data-ajax-begin="$('#changeDefaultReward').attr('disabled','');"
          data-ajax-complete="$('#changeDefaultReward').removeAttr('disabled');"
          data-ajax-method="post"
          data-ajax-update="#ActionModalContent">
        <fieldset id="changeDefaultReward">
            <modal-body>
                <div>
                    <div class="fs-6">Incentive Type :<span class="fw-bold px-1"> @Model.IncentiveTypeName</span></div>
                    <div class="fs-6 py-2">Target :<span class="fw-bold px-1"> @Model.Target</span></div>
                    <div class="fs-6">Default Reward :<span class="fw-bold px-1 d-inline-block"><input class="form-control form-control-sm" asp-for="DefaultReward" placeholder="Enter Default Reward" /> </span></div>
                </div>
                <input asp-for="Target" hidden/>
                <input asp-for="IncentiveTypeName" hidden/>
            </modal-body>
            <modal-footer>
                <button class="btn btn-success px-3" type="submit">Update</button>
            </modal-footer>
        </fieldset>
    </form>
}