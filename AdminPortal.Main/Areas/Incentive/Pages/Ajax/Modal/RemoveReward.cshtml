@page
@model TKW.AdminPortal.Areas.Incentive.Pages.Ajax.Modal.RemoveRewardModel
@{
}
<modal-header title="Remove Reward" close-button="true"></modal-header>
@if (Model.IsDone)
{
    <modal-body>
        <div class="text-center">
            <i class="fa fa-4x fa-check-circle text-success"></i><br />
            <div class="h5 mt-3">Reward has been Removed</div>
        </div>
    </modal-body>
    <script>
        $(function () {
            $("#ActionModalContent").trigger(
                {
                   type: "action.done",
                });
        });
    </script>
}
else
{
    @if (!string.IsNullOrWhiteSpace(Model.Errormessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.Errormessage
        </div>
    }
    <form method="post"
          data-ajax="true"
          data-ajax-url="@Url.Page("RemoveReward")"
          data-ajax-begin="$('#RemoveRewardFieldSet').attr('disabled','');"
          data-ajax-complete="$('#RemoveRewardFieldSet').removeAttr('disabled');"
          data-ajax-method="post"
          data-ajax-update="#ActionModalContent">
        <fieldset id="RemoveRewardFieldSet">
            <modal-body>
                <div class="fs-6">Incentive Type <span class="fw-bold px-1">@Model.IncentiveTypeName</span></div>
                <div class="fs-6 py-2">Target <span class="fw-bold px-1">@Model.TargetValue</span></div>
                <div class="fs-6">Reward <span class="fw-bold px-1">₹ @Model.RewardData.Reward</span></div>
                <div class="fs-6 py-2">From <span class="fw-bold px-1">@Model.RewardData.StartDate.ToShortDateString()</span> To <span class="fw-bold px-1">@Model.RewardData.EndDate.ToShortDateString()</span></div>
                <div class="fs-6">Are you sure you want to remove this reward ?</div>
                <input asp-for="TargetId" hidden />
                <input asp-for="RewardId" hidden />
                <input asp-for="IncentiveTypeName" hidden />
            </modal-body>
            <modal-footer>
                <button type="button" class="btn btn-default px-4" data-bs-dismiss="modal" aria-label="close">No</button>
                <button class="btn btn-danger px-4" type="submit">Yes</button>
            </modal-footer>
        </fieldset>
    </form>
}