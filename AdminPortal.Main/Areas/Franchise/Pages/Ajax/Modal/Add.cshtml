@page
@model TKW.AdminPortal.Areas.Franchise.Pages.Ajax.Modal.AddModel
@{
}
<modal-header title="Add Franchise" close-button="true"></modal-header>
@if (Model.IsDone)
{
    <modal-body>
        <div class="text-center">
            <i class="fa fa-4x fa-check-circle text-success"></i><br />
            <h4>Franchise has been added.</h4><br />
        </div>
    </modal-body>
    <script>
        $("#ActionModalContent").trigger("action.done");
    </script>
}
else
{

    <form method="post"
          data-ajax="true"
          data-ajax-url="@Url.Page("Add")"
          data-ajax-method="post"
          data-ajax-update="#ActionModalContent"
          data-ajax-begin="$('#addFieldset').attr('disabled','');"
          data-ajax-complete="$('#addFieldset').removeAttr('disabled');">
        <fieldset id="addFieldset">
            <modal-body>
                <partial name="_FranchiseInput" for="FranchiseModel" />
            </modal-body>
            <modal-footer>
                <button class="btn btn-success" type="submit">Add Franchise</button>
            </modal-footer>
        </fieldset>
    </form>
}
