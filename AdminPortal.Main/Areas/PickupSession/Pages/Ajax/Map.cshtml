@page
@model MapModel
@using TKW.Queries.DTOs.PickupSession;
@{
    Layout = null;
    var sellType = (int)PickupSessionMapViewModel.Type.Sell;
    var expenseType = (int)PickupSessionMapViewModel.Type.Expense;
    var pendingRequestType = (int)PickupSessionMapViewModel.Type.PendingRequest;
    var rescheduledRequestType = (int)PickupSessionMapViewModel.Type.RescheduledRequest;
    var cancelledRequestType = (int)PickupSessionMapViewModel.Type.CancelledRequest;
    var handledRequestType = (int)PickupSessionMapViewModel.Type.HandledRequest;
    var pickupSessionStartType = (int)PickupSessionMapViewModel.Type.PickupSessionStart;
    var pickupSessionEndType = (int)PickupSessionMapViewModel.Type.PickupSessionEnd;
}

<div class="row p-t-sm">
    <div class="col-md-12">
        <div id="googleMap" class="mb-3" style="width:100%;height:700px; border: 1px solid #707070; border-radius:4px;"></div>
    </div>
</div>
<script>
    var path = 'M 0,0 C -2,-20 -10,-22 -10,-30 A 10,10 0 1,1 10,-30 C 10,-22 2,-20 0,0 z';
    var Endpath = 'M33 135C33 88.0071 71.0071 50 118 50C164.993 50 203 88.0071 203 135C203 185.636 149.329 255.457 127.35 282.05C122.493 287.879 113.629 287.879 108.771 282.05C86.6714 255.457 33 185.636 33 135ZM87.6431 135C87.6431 151.757 101.243 165.357 118 165.357C134.757 165.357 148.357 151.757 148.357 135C148.357 118.243 134.757 104.643 118 104.643C101.243 104.643 87.6431 118.243 87.6431 135Z';
    var icons = [
        {
            path: path,
            fillOpacity: 1.0,
            fillColor: '#3498db',
            strokeWeight: 1.5,
            strokeColor: "#2a7aaf",
            scale: 0.8,
            labelOrigin: new google.maps.Point(0.5, -30)
        },
        {
            path: path,
            fillOpacity: 1.0,
            fillColor: '#ffb606',
            strokeWeight: 1.5,
            strokeColor: "#cc9205",
            scale: 0.8,
            labelOrigin: new google.maps.Point(0.5, -30)
        }, {
            path: path,
            fillOpacity: 1.0,
            fillColor: '#e74c3c',
            strokeWeight: 1.5,
            strokeColor: "#b93d30",
            scale: 0.8,
            labelOrigin: new google.maps.Point(0.5, -30)
        }, {
            path: path,
            fillOpacity: 1.0,
            fillColor: '#62cb31',
            strokeWeight: 1.5,
            strokeColor: "#4ea227",
            scale: 0.8,
            labelOrigin: new google.maps.Point(0.5, -30)
        }, {
            path: path,
            fillOpacity: 1.0,
            fillColor: '#9b59b6',
            strokeWeight: 1.5,
            strokeColor: "#7c4792",
            scale: 0.8,
            labelOrigin: new google.maps.Point(0.5, -30)
        }, {
            path: path,
            fillOpacity: 1.0,
            fillColor: '#34495e',
            strokeWeight: 1.5,
            strokeColor: "#2a3a4b",
            scale: 0.8,
            labelOrigin: new google.maps.Point(0.5, -30)
        }
        , {
            path: 'M33 135C33 88.0071 71.0071 50 118 50C164.993 50 203 88.0071 203 135C203 185.636 149.329 255.457 127.35 282.05C122.493 287.879 113.629 287.879 108.771 282.05C86.6714 255.457 33 185.636 33 135ZM87.6431 135C87.6431 151.757 101.243 165.357 118 165.357C134.757 165.357 148.357 151.757 148.357 135C148.357 118.243 134.757 104.643 118 104.643C101.243 104.643 87.6431 118.243 87.6431 135Z',
            fillOpacity: 1.0,
            fillColor: '#000000',
            strokeWeight: 1,
            strokeColor: "#000000",
            scale: 0.1,
        }, {
            path: 'M33 135C33 88.0071 71.0071 50 118 50C164.993 50 203 88.0071 203 135C203 185.636 149.329 255.457 127.35 282.05C122.493 287.879 113.629 287.879 108.771 282.05C86.6714 255.457 33 185.636 33 135ZM87.6431 135C87.6431 151.757 101.243 165.357 118 165.357C134.757 165.357 148.357 151.757 148.357 135C148.357 118.243 134.757 104.643 118 104.643C101.243 104.643 87.6431 118.243 87.6431 135Z',
            fillOpacity: 1.0,
            fillColor: '#FF0000',
            strokeWeight: 1,
            strokeColor: "#000000",
            scale: 0.1,
        }
    ];
    var list = @Html.Raw(Json.Serialize(Model.MapList));
    var polyLinePath = @Html.Raw(Json.Serialize(Model.PolylinePathList));
    var map;
    var inforObj;
    $(function () {
        map = new google.maps.Map(document.getElementById('googleMap'), {
            zoom: 16,
            center: new google.maps.LatLng(0, 0),
            clickableIcons: false,
            mapTypeControl: false,
            streetViewControl: false,
            styles: [{"featureType": "poi",
                    "elementType": "labels",
                    "stylers": [{"color": "#768d8d"},{"visibility": "simplified"}]},

                    {"featureType": "poi",
                    "elementType": "labels.icon",
                    "stylers": [{"color": "#839898"}]},

                    {"featureType": "poi.business",
                    "stylers": [{"visibility": "off"}]},

                    {"featureType": "poi.park",
                    "elementType": "labels.text",
                    "stylers": [{"visibility": "off"}]}]
            });
        var bounds = new google.maps.LatLngBounds();
        var latlng;
        for (var i = 0; i < list.length; i++) {
            var data = list[i];
           latlng = new google.maps.LatLng(data.latitude, data.longitude);
           const marker = new google.maps.Marker({
               position: latlng,
               map: map,
               label:
               {
                   text: data.locationType == 4 ? "E" : data.locationType == 5 ? "S" : data.locationType == 6 ? " " : data.locationType == 7 ? " " : "R",
                   color: "#fff",
                   fontWeight: "700",
                   fontSize: "12px"
               },
               icon: icons[list[i].locationType],
           });

            bounds.extend(new google.maps.LatLng(data.latitude, data.longitude));
            var str = (data.locationType == @expenseType ? '<a href="#ExpenseModal" data-toggle="modal" data-load-url="/Expense/Ajax/Modal/Details/' + data.id + '">'
                : data.locationType == @sellType ? '<a href="#DetailModel" data-toggle="modal" data-load-url="/Sell/Ajax/Modal/Details/' + data.id + '">'
                    : '<a href="#DetailsModal" data-toggle="modal" data-load-url="/Request/Ajax/Modal/Details/' + data.id + '">')
                + "<div style='width:350px; padding-right:15px;'><div class='row p-xxs'>"
                + "<div class='col-sm-6'>"
                + "<div class='font-bold p-b-xxs'>" + data.title + "</div>"
                + "<small class='text-muted'>"
                + (data.locationType == @sellType ? 'Sell' : data.locationType == @expenseType ? 'Expense' : data.locationType == @handledRequestType ? 'Handled Request' : data.locationType == @rescheduledRequestType ? 'Rescheduled Request' : data.locationType == @cancelledRequestType ? 'Cancelled Request' : 'Pending Request')
            + " (#" + data.id + ")</small>"
            + "</div>"
            + "<div class='col-sm-3 p-t-xs p-l-xxs p-r-xxs'>" + (data.amount !== null ? "<span>₹ <b>" + data.amount + "</b></span>" : "") + "</div>"
            +"<div class='col-sm-3 p-t-xs p-l-xxs p-r-xxs text-right'><small class='font-trans'>"+data.time+"</small></div>"
                + "</div></div>";

            const infoWindow = new google.maps.InfoWindow({
                content: str,
                maxWidth:450
            });
            marker.addListener('click', function () {
               closeOtherInfo();
               infoWindow.open(marker.get(map), marker);
                inforObj = infoWindow;
           });
        }

        map.fitBounds(bounds);

        const polyline = new google.maps.Polyline({
            path: polyLinePath,
            geodesic: true,
            strokeColor: "#000000",
            strokeOpacity: 1.0,
            strokeWeight: 2,
        });
        polyline.setMap(map);
    });

    function closeOtherInfo() {
        if (inforObj != null || inforObj != undefined) {
            inforObj.set("marker", null);
            inforObj.close();
        }
    }
</script>

