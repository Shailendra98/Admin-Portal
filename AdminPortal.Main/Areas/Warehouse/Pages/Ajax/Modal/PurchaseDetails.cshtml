@page

@model TKW.AdminPortal.Areas.Warehouse.Pages.Ajax.Modal.DetailsModel
@{
}
<modal-header title="Purchase Store Details" close-button="true"></modal-header>
<modal-body>
    <div class="row">
        <div class="col-md-6">
            <div class="hpanel">
                <div class="panel-body p-2">
                    <div class="table-responsive">
                        <table cellpadding="1" cellspacing="1" class="table">
                            <thead>
                                <tr class="border-bottom">
                                    <th>Material</th>
                                    <th class="text-end">Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var m in Model.Purchase.Items)
                                {
                                    <tr>
                                        <td>@m.MaterialName</td>
                                        <td class="text-end"><span class="font-extra-bold text-right">@m.Quantity.ToString("0.00") </span><small> @m.MaterialUnitName</small></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="hpanel">
                <div class="panel-body p-2">
                    <span class="float-end">
                        <span class="font-trans">Id:</span>
                        @Model.Purchase.Id
                    </span>
                    <div>
                        <span class="font-trans">Updated by:</span>
                        <span> @Model.Purchase.Updater.Name</span>
                    </div>
                    <div class="pt-2">
                        <span class="font-trans">Time:</span>
                        <span> @string.Format("{0:dd/MM/yyyy}", Model.Purchase.UpdateTime)<small class="text-muted"> @string.Format("{0:hh:mm tt}", Model.Purchase.UpdateTime)</small></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</modal-body>