                            <button class="btn btn-success btn-sm btn-block" type="button" id="segregationfiltersubmitbtn">Apply</button>
                            <button class="btn btn-default btn-sm btn-block" type="reset" id="segregationfilterresetbtn">Reset</button>
                        </div>
            </div>
        </div>
    </div>
