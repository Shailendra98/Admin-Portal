@page
@model TKW.AdminPortal.Areas.Sell.Pages.Ajax.Modal.Buyer.AddModel
@{
}
<modal-header title="Add Buyer" close-button="true"></modal-header>
@if (Model.IsDone)
{
    <modal-body>
        <div class="text-center">
            <i class="fa fa-4x fa-check-circle text-success"></i><br />
            <h4>Sell has been added.</h4>
        </div>
    </modal-body>
    <script>
        $("#ActionModalContent").trigger("action.done");
    </script>
}
else
{
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    <form method="post"
          data-ajax="true"
          data-ajax-url="@Url.Page("Add")"
          data-ajax-begin="$('#addFieldSet').attr('disabled','');"
          data-ajax-complete="$('#addFieldSet').removeAttr('disabled');"
          data-ajax-method="post"
          data-ajax-update="#ActionModalContent">
        <fieldset id="addFieldSet">
            <modal-body>
                <partial name="_Add" for="InputModel" />
               
            </modal-body>
            <modal-footer>
                <button class="btn btn-success" type="submit">Add Buyer</button>
            </modal-footer>
        </fieldset>
    </form>
}