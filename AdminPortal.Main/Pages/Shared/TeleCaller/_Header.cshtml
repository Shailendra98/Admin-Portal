@inject TKW.ApplicationCore.Identity.IAppUserService appUser
@inject TKW.AdminPortal.Utils.SessionData SessionData
@{
    var franchises = await SessionData.GetFranchises();
    var selectList = new SelectList(franchises, "Id", "Name", appUser.Current?.FranchiseId);
}

<div class="color-line">
</div>
<div id="logo" class="light-version">
    <a href="/">
        <img alt="TheKabadiwala" src="~/images/the-kabadiwala-logo.png" height="40">
    </a>
</div>
<nav role="navigation">
    <div class="header-link hide-menu"><i class="fa fa-bars"></i></div>
    <div class="small-logo">
        <a href="/">
            <img alt="TheKabadiwala" src="~/images/the-kabadiwala-logo.png" height="40">
        </a>
    </div>
    <div class="navbar-right">
        <ul class="nav navbar-nav no-borders">
                <li class="dropdown p-t-sm">
                    <select class="form-control input-sm" id="currentFranchise" asp-items="@selectList"><option value="0">Global</option></select>
                </li>
            
            <li class="dropdown">
                <a href="#" onclick="$('#logoutform').submit()">
                    <i class="fa fa-sign-out"></i>
                </a>
                <form method="post" id="logoutform" asp-action="Logout" asp-controller="Account"></form>
            </li>
        </ul>
    </div>
</nav>