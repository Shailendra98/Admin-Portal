@using AdminPortal.Shared.Models
@inject HttpClient httpclient

@if (model != null)
{
    if (Amounttype == "Purchase")
    {
        <div class="mb-3">
            <h6 class="fw-bold text-secondary small">Purchase</h6>
            <div class="card rounded-0 border-0" style="box-shadow: 0px 0px 10px rgba(165, 165, 165, 0.25);">
                <div class="card-body p-3">
                    <small class="text-secondary">Today's Purchase Summary</small>
                    <div class="d-flex d-inline-block mt-3">
                        <div class="h5 fw-bold"> ₹ @model.PurchaseAmount</div>
                        <span class="small text-secondary fw-bold ps-2 pt-1"> Amount </span>
                    </div>
                </div>
            </div>
        </div>
    }
    if (Amounttype == "Sell")
    {
        <div class="mb-3">
            <h6 class="fw-bold text-secondary small">Sell</h6>
            <div class="card rounded-0 border-0" style="box-shadow: 0px 0px 10px rgba(165, 165, 165, 0.25);">
                <div class="card-body p-3">
                    <small class="text-secondary">Today's Sell Summary</small>
                    <div class="d-flex d-inline-block mt-3">
                        <div class="h5 fw-bold"> ₹ @model.SellAmount</div>
                        <span class="small text-secondary fw-bold ps-2 pt-1"> Amount </span>
                    </div>
                </div>
            </div>
        </div>
    }
    if (Amounttype == "Expense")
    {
        <div class="mb-3">
            <h6 class="fw-bold text-secondary small">Expense</h6>
            <div class="card rounded-0 border-0" style="box-shadow: 0px 0px 10px rgba(165, 165, 165, 0.25);">
                <div class="card-body p-3">
                    <small class="text-secondary">Today's Expense Summary</small>
                    <div class="d-flex d-inline-block mt-3">
                        <div class="h5 fw-bold"> ₹ @model.ExpenseAmount</div>
                        <span class="small text-secondary fw-bold ps-2 pt-1"> Amount </span>
                    </div>
                </div>
            </div>
        </div>
    }


}
@code {

    [Parameter]
    public string Amounttype { get; set; }
    private PurchaseSellExpenseModel model;
    protected async override void OnAfterRender(bool firstRender)
    {
        model = await httpclient.GetFromJsonAsync<PurchaseSellExpenseModel>("api/GetPurchaseSellExpenseOfFranchise");
        base.OnAfterRender(firstRender);
        StateHasChanged();
    }


}
